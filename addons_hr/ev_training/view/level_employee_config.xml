<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="level_employee_config_action" model="ir.actions.act_window">
            <field name="name">level_employee_config</field>
            <field name="res_model">level.employee.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click create to add a new Level employee record</p>
            </field>
        </record>

        <record id="level_employee_config_form" model="ir.ui.view">
            <field name="name">level_employee_config</field>
            <field name="model">level.employee.config</field>
            <field name="arch" type="xml">
                <form string="Level employee">
                    <sheet>
                        <group>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </group>
                        <group>
                            <field name="level"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="level_employee_config_tree" model="ir.ui.view">
            <field name="name">level_employee_config</field>
            <field name="model">level.employee.config</field>
            <field name="arch" type="xml">
                <tree string="Level employee">
                    <field name="name"/>
                    <field name="level"/>
                </tree>
            </field>
        </record>
        <!--<menuitem id="training_course_config" name="Config"-->
                  <!--parent="education_course_session"/>-->

    </data>
</openerp>